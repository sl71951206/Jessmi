<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/jessmi_yellow"
    android:layout_gravity="center"
    android:padding="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtDesc"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_weight="2"
            android:layout_height="45dp"
            android:text="Ficha Detallada:"
            android:textSize="25sp"
            android:textStyle="italic" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDetalleClose"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_weight="1"
            app:cornerRadius="19dp"
            android:backgroundTint="@color/jessmi_yellow"
            android:textStyle="bold"
            android:text=""
            app:iconSize="35dp"
            app:icon="@drawable/ic_close"
            android:textColor="@color/black"
            app:iconGravity="end"
            app:iconTint="@color/default_background" />

    </LinearLayout>

    <ImageView
        android:id="@+id/img_Detalle"
        android:layout_width="350dp"
        android:layout_gravity="center"
        android:layout_height="350dp"
        android:src="@drawable/sol" />

    <TextView
        android:id="@+id/txtDetalleProducto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="BOLSA CEMENTO"
        android:textSize="20sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/txtDetalleMarca"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MARCA: SOL"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="italic" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtDetalleStock"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="top"
            android:text="STOCK: 100"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/txtDetallePrecio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="S/25.00"
            android:textColor="@color/black"
            android:textSize="35sp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>




